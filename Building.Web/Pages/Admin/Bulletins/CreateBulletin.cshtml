@page
@using Building.DataLayer.Entities.Course
@model Building.Web.Pages.Admin.Bulletins.CreateBulletinModel
@{
    ViewData["Title"] = "افزودن اطلاعیه";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن اطلاعیه</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعیه
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان اطلاعیه</label>
                        <input type="text" asp-for="bulletin.BulletinHeader" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>متن اطلاعیه</label>
                        <input type="text" asp-for="bulletin.BulletinText" class="form-control">
                    </div>
                    <div class="form-group">
                        <label> تصویر</label>
                        <input type="text" asp-for="bulletin.BulletinImg" class="form-control">
                    </div>
                    <div class="form-group">
                        <label> تاریخ روز</label>
                        <input type="text" asp-for="bulletin.CreateDate" class="form-control" value="@DateTime.Now.ToString()">
                    </div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </form>
</div>
